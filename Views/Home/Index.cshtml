@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="site.js">


@foreach (Serie ser in ViewBag.listaSeries)
{
  <div class="card" style="width: 18rem;">
  <div id = "ImgSerie"></div>
  <div class="card-body">
    <h5 class="card-title">@ViewBag.Serie.Nombre</h5>
    <button type="button" class="btn btn-secondary" data-toggle = "modal" data-target = "#ModalTemporadas" onclick = "MostrarActores(@ViewBag.Temporadas.IdTemporada)">Temporadas</button>
    <button type="button" class="btn btn-secondary" data-toggle = "modal" data-target = "#ModalActores" onclick = "MostrarActores(@ViewBag.Actores.IdActor)">Actores</button>
    <button type="button" class="btn btn-secondary" data-toggle = "modal" data-target = "#ModalMasInfo" onclick = "MostrarMasInfo(@ViewBag.Series.IdSerie)">Mas info</button> 
  </div>
</div>
}

//Modal Actores
<div class="modal" tabindex="-1" id = "ModalActores">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Actores</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id = "NombreActores"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

//Modal Temporadas
<div class="modal" tabindex="-1" id = "ModalTemporadas">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Temporadas</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id = "NumeroTemporada"></div>
        <div id = "NombreTemporada"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

//Modal Mas Info
<div class="modal" tabindex="-1" id = "ModalMasInfo">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Mas Info</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id = "AñoInicio"></div>
        <div id = "ImgSerie"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>